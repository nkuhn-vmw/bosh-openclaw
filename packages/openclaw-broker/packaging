set -e

export GOROOT=/var/vcap/packages/golang-1.22
export PATH=${GOROOT}/bin:$PATH
export HOME=/var/vcap
export GOCACHE=/var/vcap/data/compile/openclaw-broker/.cache/go-build

cd ${BOSH_COMPILE_TARGET}/openclaw-broker
mkdir -p ${BOSH_INSTALL_TARGET}/bin

go build -mod=vendor -o ${BOSH_INSTALL_TARGET}/bin/openclaw-broker .
