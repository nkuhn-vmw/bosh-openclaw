---
processes:
  - name: openclaw-registry
    executable: /var/vcap/jobs/openclaw-registry/bin/ctl
    args:
      - start
    env:
      PATH: /var/vcap/packages/node22/bin:/var/vcap/packages/openclaw/bin:/usr/local/bin:/usr/bin:/bin
      HOME: /var/vcap/data/openclaw-registry
    limits:
      memory: 512MB
      open_files: 8192
    persistent_disk: true
    additional_volumes:
      - path: /var/vcap/store/openclaw-registry
        writable: true
